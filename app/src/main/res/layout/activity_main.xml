<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_capture"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/tv_title_style_letsExplore"
        android:layout_width="283dp"
        android:layout_height="67dp"
        android:layout_marginTop="150dp"
        android:text="@string/let_s_expolre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_study"
        style="@style/btn_main"
        android:layout_width="174dp"
        android:layout_height="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="32dp"
        android:text="@string/btn_study"
        app:layout_constraintBottom_toTopOf="@+id/btn_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_quiz"
        style="@style/btn_main"
        android:layout_width="182dp"
        android:layout_height="73dp"
        android:layout_marginTop="32dp"
        android:text="@string/btn_quiz"
        app:layout_constraintEnd_toEndOf="@+id/btn_study"
        app:layout_constraintStart_toStartOf="@+id/btn_study"
        app:layout_constraintTop_toBottomOf="@+id/btn_study" />
</androidx.constraintlayout.widget.ConstraintLayout>